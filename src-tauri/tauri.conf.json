{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:8080",
		"distDir": "../dist"
	},

	"package": {
		"productName": "FoxPouch",
		"version": "0.1.4"
	},
	"tauri": {
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true
		},

		"allowlist": {
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			},
			"all": true,
			"fs": {
				"all": true,
				"readFile": true,
				"readDir": true,
				"scope": [
					"**",
					"$HOME/Documents/Games/**",
					"$DOCUMENT/Games/**"
				]
			},
			"dialog": {
				"all": true
			},
			"protocol": {
				"all": true,
				"assetScope": ["**"]
			},
			"http": {
				"scope": ["https://www.steamgriddb.com/api/v2/search/autocomplete/*", "https://www.steamgriddb.com/api/v2/heroes/game/*", "https://www.steamgriddb.com/api/v2/grids/game/*"]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "leorsousa",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 760,
				"resizable": false,
				"title": "FoxPouch",
				"width": 1044,
				"decorations": false
			}
		]
	}
}
